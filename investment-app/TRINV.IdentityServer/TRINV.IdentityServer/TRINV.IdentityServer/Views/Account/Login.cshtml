@model TRINV.IdentityServer.Models.LoginViewModel

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto h-10 w-auto" src="/images/cost_of_investment_icon.jpg" alt="Cost Of Investment Icon">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign in to your account</h2>
    </div>

    <partial name="_ValidationSummary" />

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form asp-controller="Account" asp-action="Login" method="post" class="space-y-6">
            <input type="hidden" asp-for="ReturnUrl" />
            <div>
                <label asp-for="Email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
                <div class="mt-2">
                    <input asp-for="Email" type="email" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset color sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <div class="flex items-center justify-between">
                    <label asp-for="Password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                    <div class="text-sm">
                        <a class="font-semibold color">Forgot password?</a>
                    </div>
                </div>
                <div class="mt-2">
                    <input asp-for="Password" type="password" class="block w-full color rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset sm:text-sm sm:leading-6">
                </div>
            </div>

            <div>
                <button type="submit" class="flex w-full justify-center rounded-md bg-color px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2">Sign in</button>
            </div>
        </form>

        <p class="mt-10 text-center text-sm text-gray-500">
            Not a member?
            <a asp-controller="Account"
               asp-action="Register"
               asp-route-returnUrl="@Model.ReturnUrl"
               class="font-semibold leading-6 color">
                Start a 14 day free trial
            </a>
        </p>
    </div>
</div>

<style>
    .color {
        color: #F1CA55;
    }

        .color:hover {
            color: #F1CA25;
        }

        .color:focus {
            border-color: #F1CA55
        }

        .color:focus-visible {
            border-color: #F1CA55
        }
    .bg-color {
        background-color: #F1CA55;
    }

        .bg-color:hover {
            background-color: #F1CA25;
        }

</style>


